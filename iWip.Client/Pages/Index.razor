@page "/"
@inject IStringLocalizer<Resource> L;

@attribute [Authorize]

<MudContainer MaxWidth="MaxWidth.False">
    <MudGrid>
        @if (Quantities is null)
        {
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <MudCard>
                    <MudCardContent Class="flex flex-col justify-between h-40">
                        <MudSkeleton Width="60%" Animation="Animation.Wave" />
                        <div class="flex row gap-2 mt-4">
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Width="30px" Height="30px" />
                            <MudSkeleton Width="30%" />
                        </div>
                        <MudCardActions Class="flex row justify-between ml-0 pl-0">
                            <MudSkeleton Width="35%" Height="40px" Animation="Animation.Wave" />
                            <MudSkeleton Width="35%" Height="40px" Class="text-right" Animation="Animation.Wave" />
                        </MudCardActions>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <MudCard>
                    <MudCardContent Class="flex flex-col justify-between h-40">
                        <MudSkeleton Width="60%" Animation="Animation.Wave" />
                        <div class="flex row gap-2 mt-4">
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Width="30px" Height="30px" />
                            <MudSkeleton Width="30%" />
                        </div>
                        <MudCardActions Class="flex row justify-between ml-0 pl-0">
                            <MudSkeleton Width="35%" Height="40px" Animation="Animation.Wave" />
                            <MudSkeleton Width="35%" Height="40px" Class="text-right" Animation="Animation.Wave" />
                        </MudCardActions>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <MudCard>
                    <MudCardContent Class="flex flex-col justify-between h-40">
                        <MudSkeleton Width="60%" Animation="Animation.Wave" />
                        <div class="flex row gap-2 mt-4">
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Width="30px" Height="30px" />
                            <MudSkeleton Width="30%" />
                        </div>
                        <MudCardActions Class="flex row justify-between ml-0 pl-0">
                            <MudSkeleton Width="35%" Height="40px" Animation="Animation.Wave" />
                            <MudSkeleton Width="35%" Height="40px" Class="text-right" Animation="Animation.Wave" />
                        </MudCardActions>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
        else
        {
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <DataCard ChartId="chartOne"
                          Title="@L["dashboard_quantity_fulfilled"]"
                          Summary="Quantities.QuantityFulfilled" />
            </MudItem>
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <DataCard BarColor="@Colors.Blue.Default"
                          ChartId="chartTwo"
                          Title="@L["dashboard_quantity_ordered"]"
                          Summary="Quantities.QuantityOrdered" />
            </MudItem>
            <MudItem md="4"
                     sm="12"
                     xs="12">
                <DataCard BarColor="@Colors.Blue.Default"
                          ChartId="chartTwo"
                          Title="@L["dashboard_quantities_past_due"]"
                          Summary="Quantities.QuantitiesPastDue" />
            </MudItem>
        }
        <MudItem md="6"
                 sm="12"
                 xs="12">
            <OrdersDueByWeek />
        </MudItem>
        <MudItem md="6"
                 sm="12"
                 xs="12"
                 Class="p-0">
           <OrdersDistribution />
        </MudItem>
    </MudGrid>
</MudContainer>